# -- Connection (defaults work for Docker Compose) --
MONGO_URI=mongodb://mongo:27017/cairn
ES_HOST=http://elasticsearch:9200
ES_INDEX=cairn_ouvrages
SCRAPER_API_URL=http://scraper:8000

# -- Scraping limits --
# Set to -1 to disable the limit (scrape everything).
SCRAPE_MAX_PAGES=3
SCRAPE_MAX_ITEMS_PER_THEME=-1
SCRAPE_DOWNLOAD_DELAY=1

# -- Incremental scraping behavior --
SCRAPE_LATEST_MIN_PAGES=3
SCRAPE_LATEST_KNOWN_PAGE_STREAK=2
SCRAPE_BACKFILL_PAGES_PER_RUN=3
SCRAPE_BACKFILL_MAX_NEW_ITEMS=50
